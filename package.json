    "serialize-javascript": "^2.1.2",
    "terser-webpack-plugin": "^1.4.3",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "bugs": {
    "url": "https://github.com/tonix-tuft/pigretto/issues"
  },
  "homepage": "https://github.com/tonix-tuft/pigretto#readme",
